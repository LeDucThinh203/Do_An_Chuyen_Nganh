# Server Configuration
PORT=3006
USE_NGROK=false
NGROK_URL=

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=my_store
DB_PORT=3306

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Selection (optional - defaults to these if not set)
GEMINI_CHAT_MODEL=gemini-1.5-pro
GEMINI_FAST_MODEL=gemini-1.5-flash
GEMINI_EMBED_MODEL=text-embedding-004

# ============================================
# AI Performance Tuning (for large catalogs)
# ============================================

# How many embeddings to generate on server startup
# Small value (20) = faster startup, embeddings generated on-demand
# Large value (1000) = slower startup, all embeddings ready immediately
# Recommended: 20-50 for production
EMBEDDING_STARTUP_BATCH=20

# Concurrent embedding generation limit
# Free tier Gemini API: 3-5 recommended
# Paid tier: 10-20 possible
# Higher = faster but may hit rate limits
EMBEDDING_CONCURRENT_LIMIT=3

# Delay between embedding batches (milliseconds)
# Free tier: 1000-2000 (1-2 seconds) recommended
# Paid tier: 500-1000 (0.5-1 seconds)
# Lower = faster but may trigger rate limiting
EMBEDDING_BATCH_DELAY=1000

# ============================================
# Performance Guide for Different Scales
# ============================================

# Small catalog (< 100 products):
# EMBEDDING_STARTUP_BATCH=100
# EMBEDDING_CONCURRENT_LIMIT=5
# EMBEDDING_BATCH_DELAY=500

# Medium catalog (100-500 products):
# EMBEDDING_STARTUP_BATCH=50
# EMBEDDING_CONCURRENT_LIMIT=3
# EMBEDDING_BATCH_DELAY=1000
# Run: node scripts/generate_embeddings.js (once)

# Large catalog (500-5000 products):
# EMBEDDING_STARTUP_BATCH=20
# EMBEDDING_CONCURRENT_LIMIT=3
# EMBEDDING_BATCH_DELAY=2000
# Run: node scripts/generate_embeddings.js (required)

# Enterprise (5000+ products):
# EMBEDDING_STARTUP_BATCH=0  (disable auto-generation)
# Use dedicated embedding generation service
# Consider upgrading to Gemini API paid tier
# Run: node scripts/generate_embeddings.js in background (cron job)
